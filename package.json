{
  "name": "chrome-control",
  "version": "1.0.0",
  "description": "Intelligent Chrome extension that provides contextual AI-powered suggestions",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch && npm run copy-content",
    "build": "npm run clean && npm run build:prod && npm run copy-content && npm run copy-assets",
    "build:prod": "vite build --mode production",
    "build:dev": "vite build --mode development && npm run copy-content && npm run copy-assets",
    "clean": "rm -rf dist",
    "copy-content": "cp src/content/content-simple.js dist/content.js",
    "copy-assets": "cp manifest.json sidebar.html dist/ && cp -r icons dist/",
    "package": "npm run build && npm run create-zip",
    "create-zip": "cd dist && zip -r ../chrome-control.zip . && cd ..",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/services/**/*.test.ts src/components/**/*.test.tsx src/utils/**/*.test.ts",
    "test:integration": "vitest run src/__tests__/integration/**/*.test.ts",
    "test:e2e": "vitest run src/__tests__/e2e/**/*.test.ts",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:comprehensive": "tsx src/__tests__/test-runner.ts",
    "test:services": "vitest run src/services/**/*.test.ts",
    "test:components": "vitest run src/components/**/*.test.tsx",
    "test:utils": "vitest run src/utils/**/*.test.ts",
    "test:chrome-api": "vitest run src/__tests__/integration/chrome-api.test.ts",
    "test:workflows": "vitest run src/__tests__/e2e/user-workflows.test.ts",
    "test:mock-ai": "vitest run src/__tests__/mocks/mockAIService.test.ts",
    "validate": "npm run type-check && npm run lint && npm run test:run"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.246",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^26.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^1.6.1"
  }
}
