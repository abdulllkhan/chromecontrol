# Chrome Control Extension Environment Variables
# ================================================
# Copy this file to .env and fill in your actual values

# Chrome Extension Configuration
CHROME_EXTENSION_ID=your_extension_id_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Claude/Anthropic Configuration (Optional)
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here
CLAUDE_API_BASE_URL=https://api.anthropic.com/v1

# App Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3

# Development Settings
NODE_ENV=development
VITE_PORT=3000

# Security Settings
VITE_ENABLE_HTTPS=false
VITE_CSP_MODE=strict

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Performance Settings
VITE_CACHE_TTL=3600000
VITE_MAX_CACHE_SIZE=100